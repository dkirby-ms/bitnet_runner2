{
  "mqtt": {
    "broker": "makerspace-eventgrid.westus2-1.ts.eventgrid.azure.net",
    "port": 8883,
    "topic": "devices/bitnet/messages",
    "keepalive": 60,
    "use_tls": true
  },
  "cert_service_url": "https://makerspace-cert-service.purplemeadow-71f34003.westus2.azurecontainerapps.io",
  "cert_dir": "./certs",
  "device_type": "raspberry_pi",
  "capabilities": ["mqtt", "bitnet", "ai_inference"],
  "location": "makerspace",
  "description": "BitNet-enabled IoT device for intelligent responses",
  "bitnet_path": "../BitNet",
  "bitnet_params": {
    "n_predict": 128,
    "threads": 2,
    "ctx_size": 2048,
    "temperature": 0.8,
    "conversation": false,
    "model_path": "../BitNet/models/BitNet-b1.58-2B-4T/ggml-model-i2_s.gguf"
  },
  "response_criteria": {
    "default_respond": true,
    "probability": 0.8,
    "message_types": ["general", "question"],
    "content_filters": ["help", "what", "how", "explain", "?"]
  },
  "response_delay": 2.0,
  "log_level": "DEBUG",
  "log_file": "bitnet_mqtt_device.log",
  "prompt_template": "You are a participant in a casual conversation with other entities. Entity {device_id} said: '{content}'. Recent context: {context}. Provide a short follow up response, followed by a question or other suggestion to keep the conversation going."
}
